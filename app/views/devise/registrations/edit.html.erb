<% provide(:page_title, 'Edit Profile') %>
<% provide(:profile_active, 'active') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="container text-center mt-4">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <%= link_to t('.back'), user_path(current_user), class: 'btn btn-outline-dark' %>

  <div class="text-center mt-2">
    <h2 class="m-0"><%=t('.editYourProfile') %></h2>
  </div>

  <div class="d-flex flex-lg-row mt-4 justify-content-lg-between flex-column justify-content-center align-items-center align-items-lg-start">
    <div class="col-12 col-sm-10 col-md-8 col-lg-3">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, style: 'width: 100%; max-height: 300px; object-fit: cover;', class: 'border border-muted rounded-1' %>
      <% else %>
        <%= image_tag("avatar.png", style: 'width: 100%; max-height: 300px; object-fit: cover;', class: 'border border-muted rounded-1') %>
      <% end %>
      <p class="p-0 m-0 fw-bold mt-2"><%= t('.uploadYour') %></p>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>

    <div class="col-12 col-sm-10 col-md-8 col-lg-4 ps-0 ps-lg-5 mt-3 mt-lg-0">
      <h6><%=t('.pleaseChangePersonalInfoIfNeeded') %></h6>
      <div class="field">
        <%= f.text_field :name, autofocus: true, class: 'form-control mb-3', placeholder: 'Name' %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3', placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: t('devise.registrations.new.newPassword') %>
        <p class="p-0 m-0"><%= t('.text_html') %></p>
      </div>

      <div class="field">
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control mt-2', placeholder: t('devise.registrations.new.currentPassword') %>
        <p class="m-0 p-0">* <%= t('pets.form.required') %></p>
        <p class="fw-bold"><%= t('.text2_html') %></p>
      </div>
    </div>

    <div class="col-12 col-sm-10 col-md-8 col-lg-4 ps-0 ps-lg-5">
      <h6><%= t('.pleaseProvideContactInfo') %></h6>
      <div class="field">
        <%= f.text_field :phone, autofocus: true, class: 'form-control mb-3', placeholder: t('devise.registrations.new.phone'), 'data-mask': '+38000-000-00-00' %>
      </div>

      <div class="field">
        <%= f.text_field :telegram, autofocus: true, class: 'form-control mb-3', placeholder: t('devise.registrations.new.telegram'), 'data-mask': '+38000-000-00-00' %>
      </div>

      <div class="field">
        <%= f.text_field :viber, autofocus: true, class: 'form-control mb-3', placeholder: t('devise.registrations.new.viber'), 'data-mask': '+38000-000-00-00' %>
      </div>

      <div class="field">
        <%= f.text_field :facebook, autofocus: true, class: 'form-control mb-3', placeholder: t('devise.registrations.new.facebook') %>
      </div>

      <div class="field">
        <%= f.text_field :instagram, autofocus: true, class: 'form-control mb-3', placeholder: t('devise.registrations.new.instagram') %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-3 mb-3">
    <%= f.submit "Update", class: 'btn btn-dark' %>
  </div>
<% end %>
